//- status.jade
extends ./layout.jade
head
  block title
    title Status Check
  block head
    <!--[if lte IE 8]><script language="javascript" type="text/javascript" src="/js/flot/excanvas.min.js"></script><![endif]-->
    <script type="text/javascript" src="/js/flot/jquery.flot.js"></script>
    <script type="text/javascript" src="/js/flot/jquery.flot.time.js"></script>
    <script type="text/javascript" src="/js/flot/jquery.flot.selection.js"></script>


body
  block row-content
    div.row
      div.col-lg-6
        h2 Some Graphs
        div.flot-placeholder#flot-placeholder1(style="width:480px;height:300px")
        div.flot-placeholder#flot-overview1(style="width:480px;height:50px")
        script.
          function getValues() {
            return !{values};
          }
        script(src="js/timestampView.js")

      div.col-lg-6
        h2 Document Count
        if count
          div.well
            div.form-group.row
              div.col-lg-12
                p
                  b #{count}
        else if error
          div.well
            div.form-group.row
              div.col-lg-12
              p(style="font-weight:bold;color:red;") Error: #{error}
