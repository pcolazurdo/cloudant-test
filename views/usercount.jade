//- usercount.jade
extends ./layout.jade
head
  block title
    title Status Check
  block head
    <style> #map-canvas { margin: 0; padding: 0; height: 100%; } </style>
    <script src="http://d3js.org/d3.v3.min.js"></script>

body
  block content
    if error
      div.well
        div.form-group.row
          div.col-lg-12
            p(style="font-weight:bold;color:red;") Error: #{error}
    else
      div.container-fluid
        div.row
          div(class="col-sm-3 col-md-2 sidebar")
            ul(class="nav nav-sidebar")
              <li class="active"><a href="#">Overview <span class="sr-only">(current)</span></a></li>
              <li><a href="#">Reports</a></li>
              <li><a href="#">Analytics</a></li>
              <li><a href="#">Export</a></li>

          div(class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main")
            div.row-placeholders
            <h1 class="page-header">User Count View</h1>
            div.placeholder#placeholder(style="width:960px;height:960px;margin:0px auto")
            <script src="js/usercount.js"></script>
